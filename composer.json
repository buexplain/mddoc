{
  "name": "buexplain/mddoc",
  "type": "library",
  "keywords": [
    "php",
    "api",
    "markdown",
    "doc",
    "html"
  ],
  "description": "这个是一个可以将markdown转换成html的包",
  "license": "Apache-2.0",
  "require": {
    "php": ">=7.0.0",
    "symfony/console": "*",
    "symfony/filesystem": "*",
    "cebe/markdown": "*"
  },
  "minimum-stability": "stable",
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.14"
  },
  "autoload": {
    "psr-4": {
      "MdDoc\\": "src/"
    }
  },
  "scripts": {
    "cs-fix": "php-cs-fixer fix ./src"
  },
  "bin": [
    "bin/mddoc"
  ],
  "repositories": {
    "packagist": {
      "type": "composer",
      "url": "https://mirrors.aliyun.com/composer"
    }
  }
}
